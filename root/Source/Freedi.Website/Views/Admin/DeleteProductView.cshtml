                @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "form-control", disabled = true } })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
