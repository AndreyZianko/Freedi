@{
    ViewBag.Title = "AdminView";
}

<head>
    <title>AdminPanel</title>
    <link href="~/Content/AdminPanel/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet"/>
    <link href="~/Content/AdminPanel/sb-admin.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateStyles/main_styles.css">
</head>
<div id="wrapper">
    <ul class="sidebar navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Freedi","Home")">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-book"></i>
                <span>Catalog</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">

                <a class="dropdown-item" href="">Men`s</a>
                <a class="dropdown-item" href="">Woman`s</a>
                @Ajax.ActionLink("All", "Catalog", "Admin", new AjaxOptions {UpdateTargetId = "content"}, new {@class = "dropdown-item"})

            </div>
        </li>

        <li class="nav-item active">
            <a class="nav-link" href="">
                <i class="fa fa-shopping-cart"></i>
                <span>Sales</span>
            </a>
        </li>
    </ul>
    <div id="content-wrapper">
        <div class="container-fluid">
            <div class="card border-white mb-3">
                <div class="card-body" id="content">
                </div>
            </div>

        </div>
    </div>

</div>

<a class="scroll-to-top rounded" href="#wrapper">
    <i class="fas fa-angle-up"></i>
</a>

<div class="modal fade in" id="myModal" role="dialog">
    <div class="modal-dialog">
        <section id="ChageFrom">
            <div class="modal-content">
                <div class="modal-header border-white">
                    <button type="button" class="close" aria-label="Close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div id="productList" class="col-md-10">

                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
</div>